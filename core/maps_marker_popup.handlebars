{{#if meta.sourceName}}
    <a class="mapview-marker__popup" href="{{url}}" title="DDG.Text.MORE_AT {{meta.sourceName}}">{{ellipsis name 31}} <span class="mapview-marker__arrow">â–¶</span></a>
{{else}}
    <span class="mapview-marker__popup">
        {{#if name}}
            <span class="mapview-marker__popup__name">{{name}}</span>
        {{/if}}
        {{#if address}}
            <span class="mapview-marker__popup__address">{{address}}</span>
        {{/if}}
        {{#if displayLatLon}}
            <span class="mapview-marker__popup__latlon">{{{displayLatLon}}}</span>
        {{/if}}
        {{#if address}}
            <div class="mapview-marker__popup__directions">
                <a href="{{directions}}" class="mapview-marker__popup__directions__link">D</a>
                <select class="mapview-marker__popup__directions__dropdown js-directions-dropdown">
                {{#each directionSources}}
                    <option value="{{url}}">{{name}}</option>
                {{/each}}
                </select>
            </div>
        {{/if}}
    </span>
{{/if}}
