<div class="dsp  dsp-lg">
    <div class="dsp-lg__media  dsp-lg__media--{{meta.id}}  js-detail-media {{meta.elClass.detailMedia}}" {{#if detail.width}}style="width:{{detail.width}};"{{/if}}>
        {{#if media_content}}
            {{{media_content}}}
        {{else}}
            {{#if image}}
                <img class="dsp__media__img dsp-lg__media__img {{meta.elClass.detailImg}}" src="{{imageProxy image}}" alt="{{imageAlt}}" />
            {{/if}}
        {{/if}}
    </div>
    <div class="dsp-lg__body  dsp-lg__body--{{meta.id}}  {{meta.elClass.detailBody}}">
        <div class="dsp-lg__body__content">{{{content}}}</div>
    </div>
</div>
